{% extends 'layout.html.twig' %}

{% block title %}Jeux | Resteatable{% endblock %}

{% block topBar %}
    {% include 'topBar.html.twig' with {'colorBackground': 'colorBackgroundMiddle', 'title':'Les jeux'} %}
{% endblock %}
{% block pageContent %}
    <section class="game-index-section">
        <div class="pageContent">
            <ul>
                {% for game in games %}
                    <li class="row">
                        <div class="row col-xs-offset-1 col-xs-10">
                            <div class="row">
                                <div class="col-xs-3 vignetteContainer">
                                    <img src="{{ asset('uploads/' ~ game.imageName) }}"
                                         class="img-responsive img-thumbnail vignette">
                                </div>
                                <div class="col-xs-9">
                                    <div class="row">
                                        <div class="col-xs-3">
                                            <p class="type">{{ game.type }}</p>
                                        </div>
                                        <div class="col-xs-3 pull-right">
                                            <p class="date">{{ game.uploadDate|localizeddate('long', 'none') }}</p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <h2>
                                            <a href="{{ game.link }}" target="_blank">{{ game.title }}
                                                <span class="glyphicon glyphicon-new-window"></span>
                                            </a>
                                        </h2>
                                    </div>
                                    <div class="row">
                                        <p class="col-xs-6 summary">{{ game.summary }}</p>
                                    </div>
                                </div>
                            </div>
                            {{ not loop.last ? '<hr class="row"/>' }}
                        </div>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </section>
{% endblock %}
