{% extends 'layout.html.twig' %}
{% block pageContent %}
    <div class="quizz">
        {% for question in questions %}
            <div class="panel panel-info" id="{{ question.id }}">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ question.title }}</h3>
                </div>
                <div class="panel-body">
                    <form method="post" action="#">
                    {% for answer in question.quizzAnswers %}
                        <div class="col-md-6">
                        <input type="checkbox" name="answer" value="{{ answer.isTrue }}">
                        {{ answer.choice }}
                        </div>
                    {% endfor %}
                        <button name="submit">Envoyer</button>
                    </form>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}