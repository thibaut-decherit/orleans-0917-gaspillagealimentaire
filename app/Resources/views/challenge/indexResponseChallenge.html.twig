{% extends 'layout.html.twig' %}

{% block title %}Défis Réponses | Resteatable{% endblock %}

        {% block topBar %}
            {% include 'topBar.html.twig' with {'colorBackground': 'colorBackgroundLast', 'title': descriptionChallenge.title } %}
        {% endblock %}

        {% block pageContent %}
            <section class="challenge-response-section">
                <div class="pageContent">
                    <div class="row">
                        <div class="col-xs-offset-1 col-xs-10 page">
                            <div class="row">
                                <h2>{{ descriptionChallenge.title }}</h2>
                                <p>{{ descriptionChallenge.content | raw }}</p>
                            </div>

                            {% if descriptionChallenge.isVideo == true %}
                                <div class="row">
                                    <div class="videos">
                                        <div class="col-md-offset-1 col-md-5">
                                            <iframe frameborder="0" width="480" height="270"
                                                    src="//www.dailymotion.com/embed/video/x13fp"
                                                    allowfullscreen></iframe>
                                        </div>
                                        <div class="col-md-5">
                                            <iframe frameborder="0" width="480" height="270"
                                                    src="//www.dailymotion.com/embed/video/xrhzkq"
                                                    allowfullscreen></iframe>
                                        </div>
                                    </div>
                                </div>
                            {% endif %}

                            <hr/>

                            <div class="row">
                                <h2 class="text-center">Participer au défi</h2>
                            </div>

                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        {{ form_start(form) }}
                                        {{ form_widget(form) }}
                                        <input type="submit" value="Valider le défi !" class="pull-right"/>
                                        {{ form_end(form) }}
                                    </div>
                                </div>
                            </div>

                            <hr/>

                            <div class="row">
                                <h2 class="text-center">Ils ont déjà réalisé le défi</h2>
                            </div>
                            <div class="row">
                                <div class="col-sm-offset-2 col-sm-5">
                                    <h3>{{ lastAnswer.title }}</h3>
                                    <h4>{{ lastAnswer.name }}</h4>
                                    <p>{{ lastAnswer.message }}</p>
                                </div>
                               <div class="col-sm-4">
                                   <img src="{{ asset('uploads/' ~ lastAnswer.imageName) }}" alt="photo du dernier défi" class="img-thumbnail center-block">                               </div>
                            </div>

                            <hr/>

                            <div class="row">
                                {% for answer in answers %}
                                    <div class="col-sm-6 col-md-4 col-lg-3 picturesMarge">
                                        <div class="row">
                                            <span class="modalAnswerPictures" data-toggle="modal"
                                                  data-target="#modalAnswerPictures{{ answer.id }}">
                                                <a href="#modalAnswerPictures">
                                                    <img src="{{ asset('uploads/' ~ answer.imageName) }}"
                                                         alt="photo du défi" class="img-thumbnail">
                                                </a>
                                            </span>
                                        </div>
                                        <div class="row text-center radio">
                                            <input type="radio" id="radio">
                                            <label for="radio">Signaler</label>
                                        </div>
                                    </div>
                                    <div class="modal fade" id="modalAnswerPictures{{ answer.id }}" tabindex="-1"
                                         role="dialog" aria-labelledby="myModalLabel">
                                        <div class="modal-dialog modal-lg" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <button type="button" class="close" data-dismiss="modal"
                                                            aria-label="Close"><span
                                                                aria-hidden="true">&times;</span></button>
                                                    <h3>{{ answer.title }}</h3>
                                                    <h4>{{ answer.name }}</h4>
                                                </div>
                                                <div class="modal-body" data-dismiss="modal"
                                                     aria-label="Close">
                                                    <img src="{{ asset('uploads/' ~ answer.imageName) }}"
                                                         alt="photo du défi"
                                                         class="img-responsive center-block"
                                                         data-dismiss="modal"
                                                         aria-label="Close">
                                                    <div class="row">
                                                        {{ answer.message }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        {% endblock %}

