{% extends 'layout.html.twig' %}

{% block title %}Défis au collège / Lycée | Resteatable{% endblock %}

{% block topBar %}
    {% include 'topBar.html.twig' with {'colorBackground': 'colorBackgroundLast', 'title':'Défis au collège / lycée'} %}
{% endblock %}

{% block pageContent %}
    <section class="challenge-index-section">
        <div class="pageContent">
            <ul>
                {% for descriptionChallenge in descriptionsChallenges %}
                    <li class="row">
                        <div class="row col-xs-offset-1 col-xs-10">
                            <div class="row">
                                <div class="row">
                                    <h2>{{ descriptionChallenge.title }}</h2>
                                </div>
                                <div class="row">
                                    <p class="col-xs-6 summary">
                                        {{ descriptionChallenge.content | raw }}
                                    </p>
                                    <div class="col-xs-3 pull-right">
                                        <a href="{{ path('responsechallenge_index', { 'id': descriptionChallenge.id }) }}" class="pull-right"> {#TODO link#}
                                            <button class="btn">Faire le défi</button>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <hr class="row"/>
                        </div>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </section>
{% endblock %}