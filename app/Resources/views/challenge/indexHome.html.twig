{% extends 'layout.html.twig' %}

{% block title %}Défis chez toi | Rest' à table{% endblock %}


{% block topBar %}
    {% include 'topBar.html.twig' with {'colorBackground': 'colorBackgroundLast', 'title':'Défis chez toi'} %}
{% endblock %}

{% block pageContent %}
    <section class="challenge-index-section">
        <div class="pageContent">
            <ul>
                {% for descriptionChallenge in descriptionsChallenges %}
                        <li class="row">
                            <div class="col-xs-offset-1 col-xs-10">
                                <div class="row">
                                    <div class="row">
                                        <h1>{{ descriptionChallenge.title }}</h1>
                                    </div>
                                    <div class="row">
                                        <p class="col-xs-6 summary">
                                            {{ descriptionChallenge.content | raw }}
                                        </p>
                                        <div class="col-xs-3 pull-right">
                                            <a href="{{ path('responsechallenge_index', { 'id': descriptionChallenge.id }) }}"
                                               class="pull-right">
                                                <button class="btn">Faire le défi</button>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                {{ not loop.last ? '<hr class="row"/>' }}
                            </div>
                        </li>
                {% endfor %}
            </ul>
        </div>
    </section>
{% endblock %}
