{% extends 'admin/layoutAdmin.html.twig' %}

{% block pageContent %}

    <div class="panel panel-default admin">
        <div class="panel-heading">
            <h1 class="panel-title text-info text-center">Ressource - Modifier une ressource</h1>
        </div>
        <div class="panel-body">
            <div class="row">
                <a href="{{ path('admin_resource_index') }}" class="btn_admin btn btn-default pull-right">
                    <span class="glyphicon glyphicon-chevron-left"></span> Retour Ã  la liste
                </a>
            </div>
            <hr/>
            {% include 'flashMessageTemplate.html.twig' with {
                'glyphiconType': 'glyphicon-ok',
                'alertType': 'success',
            } %}
            <div class="row">
                {{ form_start(edit_form) }}
                {{ form_widget(edit_form) }}
                <button type="submit" class="btn_admin btn btn-default">
                    <span class="glyphicon glyphicon-ok"></span> Enregistrer les modifications
                </button>
                {{ form_end(edit_form) }}
            </div>
            <hr/>
            <div class="row">
                {{ form_start(delete_form) }}
                <button type="submit" class="btn_admin btn btn-default pull-right">
                    <span class="glyphicon glyphicon-trash"></span> Supprimer
                </button>
                {{ form_end(delete_form) }}
            </div>
        </div>
    </div>
{% endblock %}
