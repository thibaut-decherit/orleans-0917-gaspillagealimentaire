{% extends 'admin/layoutAdmin.html.twig' %}

{% block pageContent %}
    <div class="panel panel-default admin">
        <div class="panel-heading">
            <h1 class="panel-title text-info text-center">S'informer - Liste des liens infos</h1>
        </div>
        <div class="panel-body">
            <div class="row">
                <a href="{{ path('home_admin') }}" class="btn_admin btn btn-default pull-right">
                    Accueil Administration</a>
            </div>
            <div class="row">
                <a href="{{ path('admin_inform_menu_new') }}" class="btn_admin btn btn-default">Ajouter un nouveau
                    lien</a>
            </div>
            <hr/>
            <div class="row">
                <div class="listAdmin">
                    {% for informMenu in informMenus %}
                        {% for label, messages in app.flashes %}
                            {% for message in messages %}
                                <div class="alert alert-danger text-center">
                                    {{ message }}
                                </div>
                            {% endfor %}
                        {% endfor %}
                        <div class="row">
                            <p>{{ informMenu.title }}</p>
                        </div>
                        <div class="row">
                            <div class="col-xs-5">
                                <img src="{{ asset('uploads/' ~ informMenu.imageName) }}"
                                     class="img-responsive img-thumbnail vignetteList">
                            </div>
                            <div class="col-xs-7">
                                <p class="pull-right link">{{ informMenu.link }}</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-8">
                                <a href="{{ path('link_menu', {'id':informMenu.id}) }}">
                                    {{ informMenu.isMenu ? 'Retirer' : 'Mettre en avant' }}
                                </a>
                            </div>
                            <div class="col-xs-4">
                                <a href="{{ path('admin_inform_menu_edit', { 'id': informMenu.id }) }}"
                                   class="btn_admin btn btn-default pull-right">Modifier</a>
                            </div>
                        </div>
                        <hr/>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
