{% extends 'admin/layoutAdmin.html.twig' %}

{% block pageContent %}

    <div class="panel panel-default admin">
        <div class="panel-heading">
            <h1 class="panel-title text-info text-center">S'entra√Æner - Liste des jeux</h1>
        </div>
        <div class="panel-body">
            <div class="row">
                <a href="{{ path('home_admin') }}" class="btn_admin btn btn-default pull-right">
                    <span class="glyphicon glyphicon-chevron-left"></span> Accueil Administration
                </a>
            </div>
            <div class="row">
                <a href="{{ path('game_new') }}" class="btn_admin btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> Ajouter un nouveau jeu
                </a>
            </div>
            <hr/>
            {% include 'flashMessageTemplate.html.twig' with {
                'glyphiconType': 'glyphicon-ok',
                'alertType': 'success',
                'alertStyle': 'alert-success',
            } %}
            {% include 'flashMessageTemplate.html.twig' with {
                'glyphiconType': 'glyphicon-warning-sign',
                'alertType': 'error',
                'alertStyle': 'alert-danger',
            } %}
            <div class="row">
                <div class="listAdmin">
                    {% for game in games %}
                        <div class="row">
                            <p>{{ game.title }}</p>
                        </div>
                        <div class="row">
                            <div class="col-xs-5">
                                <img src="{{ asset('uploads/' ~ game.imageName) }}"
                                     class="img-responsive img-thumbnail vignetteList">
                            </div>
                            <div class="col-xs-7">
                                <p class="pull-right link">{{ game.link }}</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-8">
                                <a href="{{ path('game_link_menu', {'id': game.id}) }}" class="ckeckbox">
                                    {{ game.isMenu ? 'Enlever le lien du menu' : 'Afficher le lien dans le menu' }}
                                </a>
                            </div>
                            <div class="col-xs-4">
                                <a href="{{ path('game_edit', { 'id': game.id }) }}"
                                   class="btn_admin btn btn-default pull-right">
                                    <span class="glyphicon glyphicon-edit"></span> Modifier
                                </a>
                            </div>
                        </div>
                        <hr/>
                    {% endfor %}
                    <div class="row">
                        <a href="{{ path('home_admin') }}" class="btn_admin btn btn-default">
                            <span class="glyphicon glyphicon-chevron-left"></span> Accueil Administration
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
