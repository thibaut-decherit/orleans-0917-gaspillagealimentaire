                                                </div>
                                                <div class="col-xs-3 pull-right">
                                                    <p class="date">{{ resource.uploadedAt|localizeddate('long', 'none') }}</p>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <h2>
                                                    <a class="informLink"
                                                       href="{{ asset('uploads/' ~ resource.resourceName) }}"
                                                       target="_blank">{{ resource.title }}
                                                        <span class="glyphicon glyphicon-save"></span>
                                                    </a>
                                                </h2>
                                            </div>
                                            <div class="row">
                                                <p class="col-xs-12 summary">{{ resource.description }}</p>
                                            </div>
                                        </div>
                                    </div>
                                    {{ not loop.last ? '<hr class="row"/>' }}
                                </div>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
